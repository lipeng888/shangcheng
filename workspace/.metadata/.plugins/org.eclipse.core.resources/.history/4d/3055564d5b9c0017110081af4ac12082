			try {
				// 获取消息内容
				String json = textMessage.getText();

				// 解析消息内容{"itemId":1474391929,"type":"save"}
				// 判断json数据不为空
				// 解析json数据获取jsonNode

				// 根据消息内容进行操作

			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		}
	}

}
