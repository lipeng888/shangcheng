			try {
				// 获取消息内容{type：save，itemId：123}
				String json = textMessage.getText();

				// 判断json数据不为空
				// 直接解析json数据

				// 获取操作符type
				// 获取商品id

				// 根据消息内容生成静态页面
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		}
	}

}
